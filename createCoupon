#!/bin/bash

## COLORS
RED=$(tput setaf 1)
GREEN=$(tput setaf 2)
YELLOW=$(tput setaf 3)
RESET=$(tput sgr0)

cd ~/html

COUPON_NAME=""

if [ -z $1 ]; then
    echo "‚ùå ${RED}no coupon name set ${RESET}"
    exit 1
else
    COUPON_NAME=$1
    echo "‚úÖ ${GREEN} coupon name set to: ${RESET} \"${COUPON_NAME}\""
    echo "üîé  looking, if coupon code already exists"
    DOES_COUPON_CODE_EXIST=$(wp wc shop_coupon list  --user=demaya --fields=id,code,usage_count,description --format=table | grep ${COUPON_NAME} | wc -l)
    if [ ${DOES_COUPON_CODE_EXIST} -gt 0 ]; then
       echo "‚ùå ${RED}coupon already exists ${RESET}" 
    else 
	
    fi
fi

##
